<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.mycard"
    android:versionCode="1"
    android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="StaticApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/mycard"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.mycard.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/mycard"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".setting.SettingsActivity"
            android:parentActivityName="org.mycard.MainActivity"
            android:theme="@style/AppTheme" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.mycard.MainActivity" />
        </activity>

        <provider
            android:name=".provider.YGOCardsProvider"
            android:authorities="org.mycard.provider"
            android:exported="false" >
        </provider>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15dip"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:paddingTop="15dip" >

    <TextView
        android:id="@+id/duel_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:singleLine="true"
        android:text="@string/duel_info"
        android:textSize="18sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.67dip"
        android:layout_below="@id/duel_info"
        android:layout_marginTop="5dip"
        android:background="@color/holo_gray_light"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="5dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/card_limit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:singleLine="true"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/duel_mode_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="5dip"
                android:singleLine="true"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/init_lp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:singleLine="true"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/init_hands_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:singleLine="true"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/draw_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:singleLine="true"
                android:text="TextView"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
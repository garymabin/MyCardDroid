<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dip"
    android:paddingRight="20dip"
    android:paddingTop="15dip" >

    <LinearLayout
        android:id="@+id/le_server_name"
        style="@style/room_item" >

        <TextView
            style="@style/room_item_label"
            android:text="@string/server_name" />

        <EditText
            android:id="@+id/server_name_edit_text"
            style="@style/room_item_edit_text"
            android:inputType="textNoSuggestions" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/le_server_addr"
        style="@style/room_item" >

        <TextView
            style="@style/room_item_label"
            android:text="@string/server_ip" />

        <EditText
            android:id="@+id/server_addr_edit_text"
            style="@style/room_item_edit_text"
            android:hint="0.0.0.0"
            android:singleLine="true"
            android:inputType="textNoSuggestions" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/le_server_port"
        style="@style/room_item" >
        <TextView
            style="@style/room_item_label"
            android:text="@string/server_port" />

        <EditText
            android:id="@+id/server_port_edit_text"
            style="@style/room_item_edit_text"
            android:hint="7911"
            android:inputType="number" />
    </LinearLayout>

</LinearLayout>